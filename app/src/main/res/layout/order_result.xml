<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/court_result_name"
            android:text="名称"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/court_result_type"
            android:text="类型"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/court_result_fee"
            android:text="费用"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/court_result_opentime"
            android:text="开馆"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/court_result_closetime"
            android:text="闭馆"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/court_result_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>